<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Muzzix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/carousel.css" />
    <!-- FOnt Awesome-->
    <script src="https://kit.fontawesome.com/6e2fa5513e.js" crossorigin="anonymous"></script>
</head>

<body>
    @await Html.PartialAsync("_Header")
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer id="footer" class="border-top text-muted">
            <div class="row">
                <div class="col-lg-12">
                    <p class="float-lg-right"><a href="#top">Back to top</a></p>
                    <p>&copy; @DateTime.Now.Year - Muzzix</p>
                </div>
                @* <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
            </div>
        </footer>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
