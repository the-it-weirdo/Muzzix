                        <a class="dropdown-item" href="#">Separated link</a> *@
                </div>
            </li>
            <li class="@Html.IsSelected("User", "Cart", "nav-item active", "nav-item")">
                <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">My Cart</a>
            </li>
            <li class="@Html.IsSelected("Home", "Contact", "nav-item active", "nav-item")">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
        @await Html.PartialAsync("_LoginPartial")
    </div>
